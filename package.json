{
  "name": "smartwallet",
  "private": true,
  "author": "Gelato",
  "description": "Modern Account Abstraction SDK",
  "homepage": "https://github.com/gelatodigital/smartwallet",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm version-packages && changeset publish",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/cli": "^2.29.2",
    "simple-git-hooks": "^2.12.1",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=23"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint"
  },
  "packageManager": "pnpm@10.8.1",
  "pnpm": {
    "overrides": {
      "smartwallet": "workspace:*"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "smartwallet": "*"
      }
    }
  }
}
