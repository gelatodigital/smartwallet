{
  "name": "smartwallet",
  "private": true,
  "author": "Gelato",
  "description": "Modern Account Abstraction SDK",
  "homepage": "https://github.com/gelatodigital/smartwallet",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "clean": "pnpm -r clean",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm format",
    "postinstall": "simple-git-hooks",
    "pretest": "git submodule update --init --recursive && cd contracts && forge build",
    "test": "vitest -c ./test/vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.29.3",
    "@vitest/coverage-v8": "3.1.3",
    "prool": "0.0.24",
    "simple-git-hooks": "2.13.0",
    "typescript": "catalog:",
    "viem": "catalog:",
    "vite": "6.3.5",
    "vitest": "3.1.3"
  },
  "engines": {
    "node": ">=23"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint"
  },
  "packageManager": "pnpm@10.8.1",
  "pnpm": {
    "overrides": {
      "smartwallet": "workspace:*"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "smartwallet": "*"
      }
    }
  }
}
