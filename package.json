{
  "name": "mega",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "dev": "pnpm -r dev",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=23"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint"
  },
  "packageManager": "pnpm@10.8.1",
  "pnpm": {
    "overrides": {
      "mega": "workspace:*"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "mega": "*"
      }
    }
  }
}
